<div class="row">
  <div class="col-md-4">
    <ul class="list-group">
      <li class="list-group-item">
        <div class="panel panel-default">
          <div class="panel-body">
            Checklists 
          </div>
          <div class="panel-footer">  
            <div class="btn-group filter heights">
              <!-- this is wrong, right? -->   
              <% @lists.each do |list| %>            
                <button type="button" class="btn btn-default" id=<%=list.id%>><%=list.title%></button>
              <% end %>
            </div>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="panel panel-default">
          <div class="panel-body">
            Height <a class="sort sort_column desc" id="height" href="/mountains/?sort=height">(sort by)</a> <a class="units">(meters/feet)</a>
          </div>
          <div class="panel-footer">
            <div class="btn-group filter heights">
              <button type="button" class="btn btn-default" id="four-k">4000' +</button>
              <button type="button" class="btn btn-default" id="three-four-k">3000-4000'</button>
              <button type="button" class="btn btn-default" id="below-three-k">below 3000'</button>
            </div>
          </div>
        </div>
      </li>
      <% if current_user.present? %>
        <li class="list-group-item">
          <div class="panel panel-default">
            <div class="panel-body">
              Filter by hiked/not hiked
            </div>
            <div class="panel-footer">
              <div class="btn-group filter hiked">
                <button type="button" class="btn btn-default" id="hiked">Hiked</button>
                <button type="button" class="btn btn-default" id="unhiked">Not hiked</button>
                <button type="button" class="btn btn-default">All</button>
              </div>
            </div>
          </div>
        </li>
      <% end %>
      <li class="list-group-item">
        <div class="panel panel-default">
          <div class="panel-body">
            Name <a class="sort" id="name" href="/mountains/?sort=name">(sort by)</a>
          </div>     
        </div>
      </li>
  </div>


  <div class="col-md-8">
    <ul class="list-group mountains">
      <% @mountains.each do |mountain| %>
        <li class="list-group-item"><%= link_to mountain.name, mountain %> <%= in_feet(mountain.height) %></li>
      <% end %>
    </ul>
  </div>
</div>
