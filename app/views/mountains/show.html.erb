<%= @mountain.name %>

<%= @mountain.height %>

<%= @mountain.notes %>

<%= @mountain.latitude %>, <%= @mountain.longitude %>

<% binding.pry %>

<% if @current_user_trips.present? %>
  You've hiked this mountain!
  <% @current_user_trips.each do |trip| %>
    <%= link_to trip.title, trip_path(trip) %>
  <% end %>
<% else %>
  Have you hiked this mountain yet? <%= link_to "Record it!", new_trip_path %>
<% end %>
