<div class="content-container">
  <div class="row">
    <div class="col-md-4">
      <% if @trip.image.present? %>
        <%= image_tag(@trip.image, width: "100%") %>
      <% end %>
    </div>
    <div class="col-md-8">
      <p>
        <strong>Title:</strong>
        <%= @trip.title %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= @trip.date %>
      </p>

      <p>
        <strong>Notes:</strong>
        <%= @trip.note %>
      </p>

      <p>
        <strong>Trails:</strong>
        <%= @trip.trails %>
      </p>


      <p>
        <strong>Book time:</strong>
        <%= @trip.book_time %>
      </p>

      <p>
        <strong>Actual_time:</strong>
        <%= @trip.actual_time %>
      </p>

      <p>
        <strong>Difficulty:</strong>
        <%= @trip.hike_difficulty %>
      </p>

      <p>
        <strong>Awesomeness:</strong>
        <%= @trip.hike_awesomeness %>
      </p>

      <p>
        <strong>Mountains:</strong>
        <ul>
        <% @trip.mountains.each do |mountain| %>
          <li><%= mountain.name %></li>
        <% end %>
        </ul>
      </p>

      <p>
        <strong>Hikers:</strong>
        <ul>
        <% @trip.users.each do |user| %>
          <li><%= user.user_name %></li>
        <% end %>
        </ul>
      </p>
      <%= link_to 'Edit', edit_trip_path(@trip) %> |
      <%= link_to 'Back', trips_path %>
    </div>
  </div>  
</div>
