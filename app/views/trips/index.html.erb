<div class="content-container">
  <h1>Listing trips</h1>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Difficulty</th>
        <th>Awesomeness</th>
      </tr>
    </thead>

    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.date %></td>
          <td><%= link_to trip.title, trip_path(trip) %></td>
          <td><%= trip.hike_difficulty %></td>        
          <td><%= trip.hike_awesomeness %></td>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
          <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @trips %>

  <br>

  <%= link_to 'New Trip', new_trip_path %>
</div>
